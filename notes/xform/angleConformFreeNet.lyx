\begin_inset Formula 
\[
y=e^{\frac{1}{2}\left(\rho+\Phi\right)}\left(x-e^{\left(\tau+\Theta\right)}a\right)e^{\frac{1}{2}\left(\rho+\Phi\right)^{\dagger}}
\]

\end_inset


\end_layout

